<div class="row">
    <div class="col-md-12">
        <h1>{{title}}<a href="/employees/add" class="btn btn-success pull-right" style="margin-top:5px;">Add New Employee</a></h1>
        <hr />
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th class="num">Employee Num</th>
                <th>Full Name</th>
                <th>Email</th>
                <th class="address">Address</th>
                <th class="id">Manager ID</th>
                <th>Status</th>
                <th>Department</th>
                <th>Hired On</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{employeeNum}}</td>
                <td><a href="/employee/{{employeeNum}}" target="_blank">{{firstName}} <br /> {{last_name}}</a></td>
                <td><a href="mailto:{{email}}" target="_blank">{{email}}</a></td>
                <td>{{addressStreet}} {{addresCity}} {{addressState}} {{addressPostal}}</td>
                <td><a href="/employees?manager={{employeeManagerNum}}" target="_blank">{{employeeManagerNum}}</a></td>
                <td><a href="/employees?status={{status}}" target="_blank">{{status}}</a></td>
                <td><a href="/employees?department={{department}}" target="_blank">{{department}}</a></td>
                <td>{{hireDate}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

