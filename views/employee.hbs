<div class="row">
    <div class="col-md-12">
        {{#each data}}
        <h1>{{firstName}} {{last_name}} - Employee: {{employeeNum}}</h1>
        <form method ="post" action="/employee/update">
        <fieldset>
            <legend>Personal Information</legend>
            <div clas="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input class="form-control" id="firstName" name="firstName" type="text" value="{{firstName}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="last_name">Last Name:</label>
                        <input class="form-control" id="last_name" name="last_name" type="text" value="{{last_name}}" />
                    </div>
                </div>
            </div>
        </fieldset>
        <hr />
        <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
        {{/each}}
    </div>
</div>
