<div class="row">
    <div class="col-md-12">
        <h1>Add Employee</h1>
        <hr />
        <form method="post" action="/employees/add">
        <fieldset>
            <legend>Personal Information</legend>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input class="form-control" id="firstName" name="firstName" type="text" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="last_name">Last Name:</label>
                        <input class="form-control" id="last_name" name="last_name" type="text" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input class="form-control" id="email" name="email" type="email" />
                    </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label for="socialSecurityNum">Social Security Num:</label>
                        <input class="form-control" id="socialSecurityNum" name="SSN" type="text" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="street">Address (Street):</label>
                        <input class="form-control" id="street" name="addressStreet" type="text" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="city">Address (City):</label>
                        <input class="form-control" id="city" name="addressCity" type="text" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="state">Address (State):</label>
                        <input class="form-control" id="state" name="addressState" type="text" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="zipCode">Address (Zip Code):</label>
                        <input class="form-control" id="zipCode" name="addressPostal" type="text" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="isManager">Manager:</label>
                        <input class="form-control checkbox-inline" id="isManager" name="isManager" type="checkbox" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="employeeManagerNum">Employee's Manager Number:</label>
                        <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label >Status:</label><br />
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label><input class="radio-inline" id="status" name="status" type="radio" value="Full Time" /> Full Time</label> 
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label><input class="radio-inline" id="status1" name="status" type="radio" value="Part Time" /> Part Time</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        
                        <label for="department">Department</label><br />
                         
                        <select id="department" name="department"class="form-control">
                           {{#each departments}}
                            <option value="{{departmentId}}">{{departmentName}}</option>
                            {{else}}
                        <div>No Departments</div>
                        {{/each}}
                        </select>
                        
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="hireDate">Hire Date</label>
                        <input class="form-control" id="hireDate" name="hireDate" type="text" />
                    </div>
                </div>
            </div>
        </fieldset>
        <hr />
        <input type="submit" class="btn btn-primary pull-right" value="Add Employee" /><br /><br /><br />
        </form>
    </div>
</div>


        